{% extends 'base.html.twig' %}

{% block title %}Liste des annonces
{% endblock %}

{% block content %}

    <section
        class="mt-5">

        {# Boucle pour afficher la liste des ANNONCES qui sont en BDD #}
        {% for ad_post in adPosts %}
            {% if ad_post.type == "Annonce" %}


                <article>

                    <div class="title-card p-1">
                        <h2 class="font-weight-bold">{{ ad_post.title }}</h2>
                    </div>

                    <div
                        class="d-flex">

                        {# Picture 1 de préférence #}
                        <img class="mr-3 mb-3" src="https://via.placeholder.com/260x200" alt="">

                        <div class="">
                            <div>
                                <p>
                                    {# truncate permet de réduire la taille du contenu du contenu de l'article et ajouter "..." après #}
                                    {{ ad_post.description|truncate(200, true) }}
                                </p>
                            </div>

                            <div>
                                <a href="{{ path('ad_post_show', {'id': ad_post.id }) }}" class="btn btn-light border border-dark rounded-0 font-weight-bold">
                                    Lire la suite
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="metadata mb-3 d-flex justify-content-between">
                        <div
                            class="d-flex justify-content-start">
                            {# Boucle pour afficher les TAGS correspondants à l'ANNONCE #}
                            {% for tag in ad_post.tags %}
                                <p>
                                    <span class="font-weight-bold btn btn-light border border-dark rounded-0 mr-2">{{ tag.name }}</span>
                                </p>
                            {% endfor %}
                        </div>
                        <span class="font-italic text-muted">
                            Publié le
                            {{ ad_post.createdAt | date('d/m/Y à H:i') }}
                            par
                            <a class="text-dark font-weight-bold" href="{{path('user_show', {'id': ad_post.user.id }) }}">{{ ad_post.user }}</a>
                        </span>
                    </div>
                </article>
            {% endif %}
        {% endfor %}

    </section>

{% endblock %}

{% block search %}

    <section class="ml-5 mr-4 mt-2">
        <a href="{{ path('ad_post_new') }}" class="py-3 px-3 mb-5 btn btn-light border border-dark rounded-0 font-weight-bold">
            <i class="fas fa-plus"></i>
            Ajouter une annonce
        </a>

        <div class="border-bottom border-dark mb-4 pb-3">
            <h5 class="text-center font-weight-bold">Rechercher une annonce</h5>

            <div class="form-group">
                <form action="" method="POST">

                    <label for="exampleFormControlSelect2">Par tags :</label>
                    <select name="post-tag" multiple class="form-control" id="exampleFormControlSelect2" onchange="this.form.submit()">
                        {% for tag in tags %}
                            <option value="{{tag.id}}">{{ tag.name }}</option>
                        {% endfor %}
                    </select>

                    <div class="d-flex justify-content-center">
                        <button type="submit" name="submit" class="btn btn-light border border-dark rounded-0 mb-3 mt-3 font-weight-bold">Chercher</button>
                    </div>
                    

                </form>
            </div>
        </div>


        <div>
            <h5 class="text-center font-weight-bold">Rechercher un utilisateur</h5>

            <form action="">

                <label for="exampleFormControlSelect2">Par métiers :</label>
                <select multiple class="form-control" id="exampleFormControlSelect2">
                    {% for job in jobs %}
                        <option>{{ job.name }}</option>
                    {% endfor %}
                </select>


                <label for="exampleFormControlSelect2">Par tags :</label>
                <select multiple class="form-control" id="exampleFormControlSelect2">
                    {% for tag in tags %}
                        <option>{{ tag.name }}</option>
                    {% endfor %}
                </select>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-light border border-dark rounded-0 mb-3 mt-3 font-weight-bold">Chercher</button>
                </div>

            </form>
        </div>

    </section>


{% endblock %}
