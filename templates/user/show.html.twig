{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block content %}

    <a href="{{ path('user_show', { 'id': user.id }) }}">
        <img src="{{ asset(picture_upload_path ~ (user.avatar ?: 'marvel.jpg')) }}" class="profil-avatar rounded-circle border border-dark">
    </a>

    <div class="profil-card text-center border border-dark mx-5 pt-5 px-5">

        <div class="pt-5">
            <h1 class="font-weight-bold">{{ user.username }}</h1>
        </div>

        <div class="border border-dark mx-5 my-5 py-3">
            <p><span class="font-weight-bold">Adresse email :</span> {{ user.email }}</p>

            {% for job in user.jobs %}
                <p><span class="font-weight-bold">Je suis : {{ job.name }}</span></p>
            {% endfor %}

            <p><span class="font-weight-bold">Présentation :</span></p>

            <p class="mx-5">{{ user.description }}</p>

            <div class="d-flex justify-content-start ml-5 pt-3 font-italic">
                <p>Membre depuis le {{ user.createdAt | date('d/m/Y à H:i') }}</p>
            </div>
        </div>

        {% if user.id == app.user.id %}

            <div class="my-2 d-flex justify-content-center">
                <a href="{{ path('user_edit', {'id': app.user.id }) }}" class="btn btn-success">
                    Modifier mon profil
                </a>
            </div>

            <form method="post" action="{{ path('user_delete', {'id': app.user.id}) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cet user ?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                <button class="btn btn-danger mb-4">Supprimer mon profil</button>
            </form>

        {% endif %}

    </div>

    <h5 class="card-title font-weight-bold mb-0">Galerie</h5>
    <div class="card ml-5 my-3 pt-3 px-3 border border-dark">
    {% for gallery in user.galleryPosts %}
        <div class="card-body">
        <p class="card-text">{{gallery.title}}</p>
        <a href="{{ path('user_show', { 'id': user.id }) }}">
        <img src="{{ asset(picture_upload_path ~ (gallery.picture1 ?: 'marvel.jpg')) }}" class="img-fluid">
        </a>
        <a href="{{ path('user_show', { 'id': user.id }) }}">
        <img src="{{ asset(picture_upload_path ~ (gallery.picture2 ?: 'marvel.jpg')) }}" class="img-fluid">
        </a>
        <a href="{{ path('user_show', { 'id': user.id }) }}">
        <img src="{{ asset(picture_upload_path ~ (gallery.picture3 ?: 'marvel.jpg')) }}" class="img-fluid">
        </a>
        <p class="card-text">{{gallery.description}}</p>
        <p class="card-text font-italic text-muted">Posté par {{gallery.user}} le {{ gallery.createdAt | date('d/m/Y à H:i') }}</p>
        <hr>
        </div>
    {% endfor %}
    </div>

    {{ form_start(formGallery) }}
        {{ form_widget(formGallery) }}
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-light border border-dark rounded-0 mb-3 font-weight-bold">Envoyer</button>
        </div>
        {{ form_end(formGallery) }}

    <a class="text-dark mt-5" href="{{ path('advice_post')}}">Revenir à l'accueil</a>

{% endblock %}
