            <article class="mb-5 pt-3 px-3 border border-dark">

                <h3>{{post.title}}</h3>

                    <p>{{post.description}}</p>
                    <p>par {{post.user.username}} le {{ post.createdAt | date('d/m/Y Ã  H:i') }} 
                    <a class="btn btn-primary" href="{{ path('ad_post_show', {'id': post.id})}}">Voir l'annonce</a> 

                    {% if is_granted('ROLE_USER_ADMIN') %}
                        <a class="btn btn-warning" href="">Bloquer l'annonce</a> 
                        {{include('backend/post/_delete_ad.html.twig')}}
                        </p> 
                    {% endif %}
                    
            </article>

        {% endif %}
    {% endfor %}
 {% endblock %}
 
