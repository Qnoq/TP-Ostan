{% extends 'base_backend.html.twig' %}

{% block title %}Administration
{% endblock %}
{% block content %}
    <h1>Les articles</h1>
    <a href="{{path ('backend_advicePostNew')}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ajouter un article</a>
    <tbody>
        {% for post in posts %}
            <tr>
                <td>
                    <h3>{{post.title}}</h3>
                </td>
                <td>
                    <p>{{post.description}}</p>
                </td>
                <td>
                    {#<a href="{{path ('backend_advicePostEdit', {'slug': advicePost.slug})}}">Voir</a>#}
                    <a href="{{path ('backend_advicePostEdit', {'slug': post.slug})}}">Editer</a>
                    {# pour avoir la fonction supprimer, ne pas mettre de bouton mais directement l'include de la fonction delete #}
                    {{include('backend/post/_delete.html.twig')}}
                </td>
            </tr>
        {% endfor %}
    </tbody>
{% endblock %}
